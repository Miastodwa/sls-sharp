{
  "name": "serverless-starter",
  "version": "1.0.0",
  "main": "src/handler.js",
  "license": "MIT",
  "scripts": {
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy": "export NODE_ENV=dev && yarn deploy:env",
    "deploy:production": "export NODE_ENV=production && yarn deploy:env",
    "deploy:stage": "export NODE_ENV=stage && yarn deploy:env",
    "lint": "eslint ./src",
    "precommit": "lint-staged",
    "serve": "serverless offline start",
    "tail:transform": "serverless logs --function transform --tail",
    "test": "jest --watch",
    "local:transform": "sls invoke local -f transform -p fixtures/event.json",
    "watch:transform": "sls invoke local --watch -f transform -p fixtures/event.json",
    "watch:warm": "sls invoke local --watch -f transform -p fixtures/scheduled.json"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.2.3",
    "serverless": "^1.5.1",
    "serverless-offline": "^3.16.0",
    "serverless-webpack": "^3.1.1",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "babel-runtime": "^6.22.0",
    "serverless-apigwy-binary": "^0.1.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint -- --fix",
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  }
}
